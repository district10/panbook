<!DOCTYPE html>
<html$if(lang)$ lang="$lang$"$endif$$if(dir)$ dir="$dir$"$endif$>
<head>
  <meta charset="utf-8">
  <meta name="generator" content="pandoc">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
$for(author-meta)$
  <meta name="author" content="$author-meta$">
$endfor$
$if(date-meta)$
  <meta name="dcterms.date" content="$date-meta$">
$endif$
$if(keywords)$
  <meta name="keywords" content="$for(keywords)$$keywords$$sep$, $endfor$">
$endif$
  <title>$if(title-prefix)$$title-prefix$ – $endif$$pagetitle$</title>
  <style type="text/css">code{white-space: pre;}</style>
$if(quotes)$
  <style type="text/css">q { quotes: "“" "”" "‘" "’"; }</style>
$endif$
$if(highlighting-css)$
  <style type="text/css">
$highlighting-css$
  </style>
$endif$
$for(css)$
  <link rel="stylesheet" href="$css$">
$endfor$
  <link rel="stylesheet" href="/statics/pure-min.css">
  <link rel="stylesheet" href="/statics/main.css">
$if(math)$
  $math$
$endif$
  <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv-printshiv.min.js"></script>
  <![endif]-->
$for(header-includes)$
  $header-includes$
$endfor$
</head>
<body>
$for(include-before)$
$include-before$
$endfor$
$if(title)$
<header>
<h1 class="title">$title$</h1>
$if(subtitle)$
<h1 class="subtitle">$subtitle$</h1>
$endif$
$for(author)$
<h2 class="author">$author$</h2>
$endfor$
$if(date)$
<h3 class="date">$date$</h3>
$endif$
</header>
$endif$

<div id="layout"><a href="#menu" id="menuLink" class="menu-link"></a>
    <div id="menu">
        <div class="pure-menu pure-g"><a class="pure-menu-heading" href="/">PanBook</a>
            <ul class="pure-menu-list pure-u-1 pure-u-1-4">
                $for(pb-index)$
                <li class="pure-menu-item"><a href="$pb-index.url$" class="pure-menu-link">$pb-index.title$</a></li>
                $for(pb-index.pb-index)$
                <li class="pure-menu-item"><a href="$pb-index.pb-index.url$" class="pure-menu-link">$pb-index.pb-index.title$</a></li>
                $endfor$
                $endfor$
            </ul>
        </div>
    </div>
</div>

<div id="main">
$body$
</div>

$for(include-after)$
$include-after$
$endfor$

<div class="footer">
    <div class="legal pure-g">
    <div class="pure-u-1 u-sm-1-2">
        <p class="legal-license">
            This site is built with &lt;3 using Panbook<br>
        </p>
    </div>
    <div class="pure-u-1 u-sm-1-2">
        <a href="https://github.com/district10/panbook">GitHub Project</a>
        <p class="legal-copyright">&copy; 2016 TANG ZhiXiong.</p>
    </div>
</div>
</body>
</html>
